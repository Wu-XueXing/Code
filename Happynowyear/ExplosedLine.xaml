<UserControl x:Class="Happynowyear.ExplosedLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Happynowyear"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="4">
    <Canvas>
        <Ellipse Width="4" Height="8" Canvas.Bottom="0">
            <Ellipse.Fill>
                <RadialGradientBrush RadiusX="0.5" RadiusY="0.5" GradientOrigin="0.5,0.5">
                    <GradientStop Color="#fff" Offset="0.5">
                    </GradientStop>
                    <GradientStop Color="{StaticResource ExplosedMainColor}" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Polygon Points="0,36 2,40 4,36 2,0" Opacity="1">
            <Polygon.Fill>
                <RadialGradientBrush RadiusX="0.5" RadiusY="0.5" GradientOrigin="0.5,1.4">
                    <GradientStop Color="#fff" Offset="0.2"/>
                    <GradientStop Color="{StaticResource ExplosedMainColor}" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
            </Polygon.Fill>
        </Polygon>
    </Canvas>
</UserControl>
