<UserControl x:Class="Happynowyear.Bomber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Happynowyear"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="10">
    <Canvas Opacity="1">
        <Ellipse Width="10" Height="10">
            <Ellipse.Fill>
                <RadialGradientBrush RadiusX="0.5" RadiusY="0.5" GradientOrigin="0.5,0.5">
                    <GradientStop Color="#fff" Offset="0.5">
                    </GradientStop>
                    <GradientStop Color="{StaticResource BomberMainColor}" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Polygon Points="0,5 4,30 6,30 10,5 5,0" Opacity="0.6">
            <Polygon.Fill>
                <RadialGradientBrush RadiusX="0.5" RadiusY="0.5" GradientOrigin="0.5,-1.2">
                    <GradientStop Color="#fff" Offset="0.2"/>
                    <GradientStop Color="{StaticResource BomberMainColor}" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
            </Polygon.Fill>
        </Polygon>
    </Canvas>
</UserControl>
