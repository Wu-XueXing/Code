<UserControl x:Class="Happynowyear.Explosed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Happynowyear"
             mc:Ignorable="d" 
             d:DesignHeight="8" d:DesignWidth="8">
    <Canvas Opacity="1">
        <Polygon Points="0,4 3,5 4,8 5,5 8,4 5,3 4,0 3,3">
            
            <Polygon.Fill>
                <RadialGradientBrush RadiusX="0.5" RadiusY="0.5" GradientOrigin="0.5,0.5">
                    <GradientStop Color="#fff"/>
                    <GradientStop Color="{StaticResource ExplosedMainColor}" Offset="1"/>
                </RadialGradientBrush>
            </Polygon.Fill>
        </Polygon>
    </Canvas>
</UserControl>
